DROP DATABASE IF EXISTS kennitala_Lokaverkefni;
CREATE DATABASE kennitala_Lokaverkefni;
USE kennitala_Lokaverkefni;

CREATE TABLE flytjandi
(	ID char(10) PRIMARY KEY NOT NULL,
	artist_name varchar(50),
    born varchar(9),
    died varchar(9),
    biography varchar(100)
);

CREATE TABLE lagalisti
(	ID char(10) PRIMARY KEY NOT NULL,
	song_name varchar(50),
    length varchar(5),
    text_ varchar(2000),
    release_date varchar(9)
);

CREATE TABLE tegund
(	ID char(10) PRIMARY KEY NOT NULL,
	song_genre varchar(30),
    artist_name varchar(50)
);


CREATE TABLE utgefandi
(	ID char(10) PRIMARY KEY NOT NULL,
	label_name varchar(50),
    copyright varchar(25),
    located varchar(90)
);

/*-------------------------------------------------------------*/

CREATE TABLE askrifandi
(
ID CHAR(10) PRIMARY KEY NOT NULL,
name VARCHAR(30) NOT NULL,
email VARCHAR(30) NOT NULL,
address VARCHAR(30) NOT NULL
);

CREATE TABLE lagaval
(
subscriber VARCHAR(30),
performer VARCHAR(30),
song VARCHAR(50),
date VARCHAR(30)
);

CREATE TABLE tonleikar
(
ID INT PRIMARY KEY AUTO_INCREMENT,
performers_con
location
date
tickets
subscribers
schedule
);

CREATE TABLE midasala
(
ticket_amount
location
performer
date
);
